<Application
    x:Class="FakeBandClientTestApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="using:FakeBandClientTestApp.Converters"
    xmlns:local="using:FakeBandClientTestApp"
    RequestedTheme="Light">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <cnv:BandThemeBrushConverter x:Key="BandThemeBrushConverter" />
        <cnv:TimeStampFormattingConverter x:Key="TimeFormatter" />
    </Application.Resources>

</Application>
